:8765 {
	root * /usr/share/caddy
	encode gzip zstd

	@static {
		path *.js *.css *.png *.jpg *.jpeg *.svg *.webp *.ico *.json *.wasm
	}
	header @static Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate"
	header @static Pragma "no-cache"
	header @static Expires "0"

	@html {
		path *.html
	}
	header @html Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate"
	header @html Pragma "no-cache"
	header @html Expires "0"

	file_server
}
